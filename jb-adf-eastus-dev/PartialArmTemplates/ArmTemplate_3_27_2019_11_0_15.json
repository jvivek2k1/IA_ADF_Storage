{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "jb-adf-eastus-dev"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Copy Data')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy Data1",
						"description": "First Time ADF",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "SqlSink",
								"writeBatchSize": 10000
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"columnMappings": {
									"FirstName": "FirstName",
									"MiddleName": "MiddleName",
									"LastName": "LastName"
								}
							}
						},
						"inputs": [
							{
								"referenceName": "JB_SOURCE",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "JB_Azure",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/JB_SOURCE')]",
				"[concat(variables('factoryId'), '/datasets/JB_Azure')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/JB_Azure')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSQLDB",
					"type": "LinkedServiceReference"
				},
				"type": "AzureSqlTable",
				"structure": [
					{
						"name": "FirstName",
						"type": "String",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "MiddleName",
						"type": "String",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "LastName",
						"type": "String",
						"precision": 255,
						"scale": 255
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'dbo].[Emp]')]"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/JB_SOURCE')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Laptop",
					"type": "LinkedServiceReference"
				},
				"type": "SqlServerTable",
				"structure": [
					{
						"name": "FirstName",
						"type": "String"
					},
					{
						"name": "MiddleName",
						"type": "String"
					},
					{
						"name": "LastName",
						"type": "String"
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'dbo].[Emp]')]"
				}
			}
		}
	]
}